@model FisioterapiaUlatskawa.Models.UsuariosViewModel


@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0, shrink-to-fit=no">
    <meta http-equiv="content-type" content="text/html; charset=UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <link rel="icon" href="~/Content/MasterCss/img/icon.ico" type="image/x-icon">


    <script src="~/Scripts/plugin/webfont/webfont.min.js"></script>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Lato:300,400,700,900" media="all">
    <link href="~/Content/MasterCss/css/fonts.min.css" rel="all" />


    <title>Forgot Password</title>
    <!-- Custom styles for this page -->
    <link href="~/Tema/vendor/datatables/dataTables.bootstrap4.min.css" rel="stylesheet">
    <!-- Custom styles for this template-->
    <link href="~/Tema/css/sb-admin-2.min.css" rel="stylesheet">
    <script src="~/Scripts/Alerts.js"></script>

    <script src="~/Scripts/jquery-3.4.1.min.js"></script>



    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>


</head>
<body id="bodyLogin">



    <div class="container mt-5">



        <!-- Outer Row -->
        <div class="row justify-content-center">
            <div class="col-xl-5 col-lg-6 col-md-4">

                <div class="card o-hidden border-0  animated bounceInDown" id="loginContainer">
                    <div class="card-body p-0">
                        <!-- Nested Row within Card Body -->
                        <div class="row">

                            <div class="col-12">
                                <div class="p-5">


                                    <div class="text-center">

                                        <img src="" alt="Logo" style="width:150px;">

                                        <h6 class="text-gray-900 mb-4 animated pulse infinite mt-3">Reestablecer contraseña</h6>
                                    </div>
                                    @using (Html.BeginForm("ForgotPassword", "Login", FormMethod.Post))
                                    {
                                        @Html.AntiForgeryToken()
                                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })


                                        <label class="field-validation-error text-success" id="Message">@TempData["Message"]</label>
                                        <label class="field-validation-error text-danger" id="ErrorMessage">@Html.DisplayFor(model => model.LoginErrorMessage)</label>


                                        <div class="form-group">
                                            <i class="fas fa-user"></i> @Html.LabelFor(model => model.cedula, htmlAttributes: new { @class = "control-label labelLogin" })
                                            <div class="col-sm-12 col-md-12">
                                                @Html.EditorFor(model => model.cedula, new { htmlAttributes = new { @class = "form-control form-control-user LoginInput", @tabindex = "1" } })
                                                @Html.ValidationMessageFor(model => model.cedula, "", new { @class = "text-danger" })
                                            </div>
                                        </div>


                                        <div class="form-group">
                                            <div class="col-sm-12 col-md-12 pr-0">
                                                <input type="submit" value="Reestablecer Contraseña" class="btn btn-primary btn-user btn-block" tabindex="4" />
                                            </div>
                                        </div>



                                        <div class="form-group">

                                            <a href="@Url.Action("Index", "Login")" id="btnForgotPass" tabindex="5">Ya tienes cuenta. Iniciar Sesión</a>

                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>

        </div>

    </div>




    <!-- Bootstrap core JavaScript-->
    <script src="~/Tema/vendor/jquery/jquery.min.js"></script>
    <script src="~/Tema/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="~/Tema/vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="~/Tema/js/sb-admin-2.min.js"></script>

    <!-- Page level plugins
    <script src="~/Tema/vendor/chart.js/Chart.min.js"></script> -->
    @*Page level custom scripts
        <script src="~/Tema/js/demo/chart-area-demo.js"></script>
        <script src="~/Tema/js/demo/chart-pie-demo.js"></script>
    *@


    <script src="https://cdnjs.cloudflare.com/ajax/libs/notify/0.4.2/notify.min.js"></script>

    <!-- Page level plugins -->
    <script src="~/Tema/vendor/datatables/jquery.dataTables.min.js"></script>
    <script src="~/Tema/vendor/datatables/dataTables.bootstrap4.min.js"></script>

    @*Page level custom scripts*@

    <script src="~/Tema/js/demo/datatables-demo.js"></script>



</body>
</html>
